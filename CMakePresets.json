{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "host-debug",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/cmake/host-debug",
            "cacheVariables": {
                "HOOT_TARGET_NAME": "host",
                "CMAKE_BUILD_TYPE": "debug"
            },
            "environment": {}
        },
        {
            "name": "host-release",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/cmake/host-release",
            "cacheVariables": {
                "HOOT_TARGET_NAME": "host",
                "CMAKE_BUILD_TYPE": "release"
            },
            "environment": {}
        },
        {
            "name": "microbit-debug",
            "generator": "Unix Makefiles",
            "toolchainFile": "${sourceDir}/toolchain/arm-none-eabi.cmake",
            "binaryDir": "${sourceDir}/cmake/microbit-debug",
            "cacheVariables": {
                "HOOT_TARGET_NAME": "microbit",
                "CMAKE_BUILD_TYPE": "debug"
            },
            "environment": {}
        },
        {
            "name": "microbit-release",
            "generator": "Unix Makefiles",
            "toolchainFile": "${sourceDir}/toolchain/arm-none-eabi.cmake",
            "binaryDir": "${sourceDir}/cmake/microbit-release",
            "cacheVariables": {
                "HOOT_TARGET_NAME": "microbit",
                "CMAKE_BUILD_TYPE": "release"
            },
            "environment": {}
        }
    ]
}